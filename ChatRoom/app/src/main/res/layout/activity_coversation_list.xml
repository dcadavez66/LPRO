<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    android:textDirection="firstStrong"
    tools:context=".CoversatioList">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addconversation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#194052"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.96"
        app:rippleColor="#00250E0E"
        app:srcCompat="@android:drawable/ic_input_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="364dp"
        android:layout_height="642dp"
        android:layout_marginTop="16dp"
        android:alwaysDrawnWithCache="true"
        android:clipToPadding="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/public_channel" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="412dp"
        android:layout_height="71dp"
        android:layout_marginStart="1dp"
        android:background="#194052"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:textAlignment="gravity"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="#FCF9F9" />

    <TextView
        android:id="@+id/public_channel"
        android:layout_width="360dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/rounded_rectangle_red"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/public_chat"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool" />

</androidx.constraintlayout.widget.ConstraintLayout>